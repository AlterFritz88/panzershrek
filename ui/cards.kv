#:import BattleCard ui.cards.BattleCard
#:import BattleCardReserve ui.cards.BattleCardReserve
#:import EmptyField ui.cards.EmptyField
#:import MinusLabel ui.cards.MinusLabel

<BattleCard>:
    choose_color: 0,0,0,0
    canvas.after:
        Color:
            rgba: self.border_color
        Line:
            width:  3
            rectangle: self.x+3, self.y+3, self.width-6, self.height-5
        Color:
            rgba: self.choose_color
            group: 'a'
        Line:
            width:  2
            rectangle: self.x-1, self.y-1, self.width+1, self.height+1

    on_press:   self.select()
    orientation:    'horizontal'
    background_disabled_normal: 255,10,10,110
    border: 255,10,10,110

    FloatLayout:
        Label:
            id: name
            outline_width:  2
            disabled_color:  self.color
            pos_hint: {'x':0.90, 'y': 0.11}
            size_hint: (0.05, 0.05)
            font_size:  sp(19)
        Label:
            text:   '0'
            id: health_points
            font_size:  sp(13)
            #outline_color:  0,0,0
            outline_width:  2
            disabled_color:  self.color
            pos_hint: {'x':0.07, 'y': 0.11}
            size_hint: (0.05, 0.05)
        Label:
            text:   '0'
            id: attack_points
            font_size:  sp(13)
            color: 0,0.9,0,1
            outline_color:  0,0,0
            outline_width:  2
            size_hint_y:    0.3
            disabled_color:  self.color
            pos_hint: {'x':0.07, 'y': 0.27}
            size_hint: (0.05, 0.05)
        Label:
            text:   '0'
            id: fuel_add
            font_size:  sp(13)
            color: 0,0.9,0,1
            outline_color:  0,0,0
            outline_width:  2
            size_hint_y:    0.3
            disabled_color:  self.color
            pos_hint: {'x':0.95, 'y': 0.95}
            size_hint: (0.05, 0.05)


<BattleCardReserve>:
    orientation:    'horizontal'
    border: 255,10,10,110

    size_hint:  None, None
    on_press:   self.selected()
    name: ""
    img: ""

    FloatLayout:
        Label:
            text:   '0'
            id: health_points
            font_size:  sp(13)
            #outline_color:  0,0,0
            outline_width:  2
            disabled_color:  self.color
            pos_hint: {'x':0.07, 'y': 0.11}
            size_hint: (0.05, 0.05)
        Label:
            text:   '0'
            id: attack_points
            font_size:  sp(13)
            color: 0,0.9,0,1
            outline_color:  0,0,0
            outline_width:  2
            size_hint_y:    0.3
            disabled_color:  self.color
            pos_hint: {'x':0.07, 'y': 0.27}
            size_hint: (0.05, 0.05)
        Label:
            text:   '0'
            id: fuel_add
            font_size:  sp(13)
            color: 0,0.9,0,1
            outline_color:  0,0,0
            outline_width:  2
            size_hint_y:    0.3
            disabled_color:  self.color
            pos_hint: {'x':0.95, 'y': 0.95}
            size_hint: (0.05, 0.05)


<EmptyField>:
    size_hint: (None, None)
    on_press:   self.move()

<MinusLabel>:
    font_size:     sp(40)
    outline_color: (0, 0, 0)
    color:         (0.8, 0, 0, 1)
    outline_width:  5
    size_hint:     (None, None)
    halign:        'center'
    valign:        'center'
    text_size:     self.size