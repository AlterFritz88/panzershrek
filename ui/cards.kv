#:import BattleCard ui.cards.BattleCard
#:import BattleCardReserve ui.cards.BattleCardReserve
#:import EmptyField ui.cards.EmptyField
#:import MinusLabel ui.cards.MinusLabel

<BattleCard>:
    canvas.after:
        Color:
            rgba: self.border_color
        Line:
            width:  3
            rectangle: self.x+3, self.y+3, self.width-6, self.height-5

    on_press:   self.select()
    orientation:    'horizontal'
    border: 255,10,10,110
    Widget:
        size_hint_x:    0.8
    BoxLayout:
        orientation:    'vertical'
        size_hint_x:    0.4
        spacing:    5
        Label:
            text:   '0'
            id: health
            font_size:  sp(35)
            outline_color:  0,0,0
            outline_width:  5
            size_hint_y:    0.3
        Label:
            text:   '0'
            id: fire
            font_size:  sp(35)
            color: 0.8,0,0,1
            outline_color:  0,0,0
            outline_width:  5
            size_hint_y:    0.3
        Widget:
            size_hint_y:    0.9

<BattleCardReserve>:
    orientation:    'horizontal'
    border: 255,10,10,110
    height: app.root.height // 4.5
    width:  app.root.height // 4.5
    size_hint:  None, None
    on_press:   self.selected()
    Widget:
        size_hint_x:    0.8
    BoxLayout:
        orientation:    'vertical'
        size_hint_x:    0.4
        spacing:    5
        Label:
            text:   "12"
            id: health
            font_size:  sp(35)
            outline_color:  0,0,0
            outline_width:  5
            size_hint_y:    0.3
        Label:
            text:   "2"
            id: fire
            font_size:  sp(35)
            color: 0.8,0,0,1
            outline_color:  0,0,0
            outline_width:  5
            size_hint_y:    0.3
        Widget:
            size_hint_y:    0.9

<EmptyField>:
    size_hint: (None, None)
    width: self.parent.height // 2.1
    height: self.parent.height // 2.1
    on_press:   self.move()

<MinusLabel>:
    font_size:     sp(40)
    outline_color: (0, 0, 0)
    color:         (0.8, 0, 0, 1)
    outline_width:  5
    size_hint:     (None, None)
    halign:        'center'
    valign:        'center'
    text_size:     self.size