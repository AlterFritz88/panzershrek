#:import GameField ui.gamefield.GameField
#:import BattleCard ui.cards.BattleCard
#:import EmptyField ui.cards.EmptyField
#:import BattleCardReserve ui.cards.BattleCardReserve


<GameScreen@Screen>
    name: "gamefield"
    BoxLayout:
        orientation:    "vertical"

        BoxLayout:
            orientation:    'horizontal'
            size_hint_y:    0.3
            Widget:
                size_hint_x:    0.25
            GameField:
                id: gamefield
                EmptyField:
                    field_pos: (2, 0)
                    id: 2,0
                EmptyField:
                    field_pos: (2, 1)
                EmptyField:
                    field_pos: (2, 2)
                EmptyField:
                    field_pos: (2, 3)
                EmptyField:
                    field_pos: (2, 4)
                    id: 2,4
                EmptyField:
                    field_pos: (1, 0)
                EmptyField:
                    field_pos: (1, 1)
                EmptyField:
                    field_pos: (1, 2)
                EmptyField:
                    field_pos: (1, 3)
                EmptyField:
                    field_pos: (1, 4)
                EmptyField:
                    field_pos: (0, 0)
                    id: 0,0
                EmptyField:
                    field_pos: (0, 1)
                EmptyField:
                    field_pos: (0, 2)
                EmptyField:
                    field_pos: (0, 3)
                EmptyField:
                    field_pos: (0, 4)

            Widget:
                size_hint_x:    0.1
        Widget:
            size_hint_y:    0.1
        BoxLayout:
            orientation:    'horizontal'
            size_hint_y:    0.2
            FloatLayout:
                size_hint_x:    0.25
                id: stack
                Image:
                    id: card_1
                    source: 'imgs/skirt.png'
                    size_hint:  None, None
                    size:     self.parent.height // 1.2, self.parent.height // 1.2
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: 15
                            axis: 0, 0, 1
                            origin: self.center
                    canvas.after:
                        PopMatrix
                Image:
                    id: card_2
                    source: 'imgs/skirt.png'
                    size_hint:  None, None
                    size:     self.parent.height // 1.2, self.parent.height // 1.2
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: 5
                            axis: 0, 0, 1
                            origin: self.center
                    canvas.after:
                        PopMatrix
                Image:
                    id: card_3
                    source: 'imgs/skirt.png'
                    size_hint:  None, None
                    size:     self.parent.height // 1.2, self.parent.height // 1.2
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: 20
                            axis: 0, 0, 1
                            origin: self.center
                    canvas.after:
                        PopMatrix
            RV:
                id: reserve_cards
            Widget:
                size_hint_x:    0.15

<RV@RecycleView>:
    viewclass: 'BattleCardReserve'
    data:   [{"card": 'LehrStab'} for x in range(4)]
    RecycleBoxLayout:
        default_size: None, None
        default_size_hint: None, None
        size_hint_x: None
        width: self.minimum_width
        height: self.minimum_height
        orientation: 'horizontal'
        id:     rs
        spacing:    3




