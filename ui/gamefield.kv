#:import GameField ui.gamefield.GameField
#:import BattleCard ui.cards.BattleCard
#:import BattleCardReserve ui.cards.BattleCardReserve


<GameScreen@Screen>
    name: "gamefield"
    BoxLayout:
        orientation:    "vertical"
        Widget:
            size_hint_y:    0.1
        BoxLayout:
            orientation:    'horizontal'
            size_hint_y:    0.7
            Widget:
                size_hint_x:    0.1
            GameField:
                id: gamefield
            Widget:
                size_hint_x:    0.1
        BoxLayout:
            orientation:    'horizontal'
            size_hint_y:    0.3
            FloatLayout:
                size_hint_x:    0.25
                id: stack
                Image:
                    id: card_1
                    source: 'imgs/skirt.png'
                    size_hint:  None, None
                    size:     self.parent.height // 1.2, self.parent.height // 1.2
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: 15
                            axis: 0, 0, 1
                            origin: self.center
                    canvas.after:
                        PopMatrix
                Image:
                    id: card_2
                    source: 'imgs/skirt.png'
                    size_hint:  None, None
                    size:     self.parent.height // 1.2, self.parent.height // 1.2
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: 5
                            axis: 0, 0, 1
                            origin: self.center
                    canvas.after:
                        PopMatrix
                Image:
                    id: card_3
                    source: 'imgs/skirt.png'
                    size_hint:  None, None
                    size:     self.parent.height // 1.2, self.parent.height // 1.2
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: 20
                            axis: 0, 0, 1
                            origin: self.center
                    canvas.after:
                        PopMatrix
            RV:
                id: reserve_cards
            Widget:
                size_hint_x:    0.15

<RV@RecycleView>:
    viewclass: 'BattleCardReserve'
    data:   [{'source': 'imgs/stab1.png', "base_card": 'LehrStab'} for x in range(4)]
    RecycleBoxLayout:
        default_size: None, None
        default_size_hint: None, None
        size_hint_x: None
        width: self.minimum_width
        orientation: 'horizontal'
        id:     rs
        spacing:    3




