#:import GameField ui.gamefield.GameField
#:import BattleCard ui.cards.BattleCard
#:import EmptyField ui.cards.EmptyField
#:import BattleCardReserve ui.cards.BattleCardReserve


<GameScreen@Screen>
    name: "gamefield"

    BoxLayout:
        orientation:    "vertical"
        spacing:    6
        BoxLayout:
            size_hint_y: 0.15
            #size_hint_x: None
            padding: 5
            orientation:    "horizontal"
            Widget:
                size_hint_x:    0.2
            EnemyReserveCards:
                id: enemy_reserve_cards
                size_hint_x:    0.6
            Widget:
                size_hint_x:    0.2

        BoxLayout:
            orientation:    'horizontal'
            size_hint_y:    0.2
            padding: 3
            spacing:    2
#            Widget:
#                size_hint_x:    0.2
            BoxLayout:
                orientation:    'horizontal'
                size_hint_x:    0.2
                Label:
                    text:   '12'
                    text_size: self.size
                    valign: "bottom"
                    id:     my_player_fuel
                Label:
                    text:   '+4'
                    text_size: self.size
                    valign: "bottom"
                    id:     my_player_fuel_add
            GameField:
                id: gamefield
                #size_hint_x:    0.4
                EmptyField:
                    field_pos: (2, 0)
                    id: 2,0
                EmptyField:
                    field_pos: (2, 1)
                    id: 2,1
                EmptyField:
                    field_pos: (2, 2)
                    id: 2,2
                EmptyField:
                    field_pos: (2, 3)
                    id: 2,3
                EmptyField:
                    field_pos: (2, 4)
                    id: 2,4
                EmptyField:
                    field_pos: (1, 0)
                    id: 1,0
                EmptyField:
                    field_pos: (1, 1)
                    id: 1,1
                EmptyField:
                    field_pos: (1, 2)
                    id: 1,2
                EmptyField:
                    field_pos: (1, 3)
                    id: 1,3
                EmptyField:
                    field_pos: (1, 4)
                    id: 1,4
                EmptyField:
                    field_pos: (0, 0)
                    id: 0,0
                EmptyField:
                    field_pos: (0, 1)
                    id: 0,1
                EmptyField:
                    field_pos: (0, 2)
                    id: 0,2
                EmptyField:
                    field_pos: (0, 3)
                    id: 0,3
                EmptyField:
                    field_pos: (0, 4)
                    id: 0,4
            Widget:
                size_hint_x:    0.2
            BoxLayout:
                orientation:    'vertical'
                size_hint_x:    0.15
                Widget:
                    size_hint_y:    0.8
                MDFillRoundFlatIconButton:
                    text:   "End turn"
                    pos_hint: {"center_x": 0.1, "center_y": 0.1}
                    icon:   'timer-sand'
                    on_press:   app.game_session.next_turn()
        Widget:
            size_hint_y:    0.2
        BoxLayout:
            orientation:    'horizontal'
            size_hint_y:    0.15
            FloatLayout:
                size_hint_x:    0.25
                id: stack

                Image:
                    id: card_1
                    source: 'imgs/skirt.png'
                    size_hint:  None, None
                    size:     self.parent.height // 1.2, self.parent.height // 1.2
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: 15
                            axis: 0, 0, 1
                            origin: self.center
                    canvas.after:
                        PopMatrix
                Image:
                    id: card_2
                    source: 'imgs/skirt.png'
                    size_hint:  None, None
                    size:     self.parent.height // 1.2, self.parent.height // 1.2
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: 5
                            axis: 0, 0, 1
                            origin: self.center
                    canvas.after:
                        PopMatrix
                Image:
                    id: card_3
                    source: 'imgs/skirt.png'
                    size_hint:  None, None
                    size:     self.parent.height // 1.2, self.parent.height // 1.2
                    canvas.before:
                        PushMatrix
                        Rotate:
                            angle: 20
                            axis: 0, 0, 1
                            origin: self.center
                    canvas.after:
                        PopMatrix
            RV:
                id: reserve_cards
            Widget:
                size_hint_x:    0.15



<RV@ScrollView>:
    BoxLayout:

        default_size: None, None
        default_size_hint: None, None
        size_hint_x: None
        width: self.minimum_width
        height: self.minimum_height
        orientation: 'horizontal'
        id:     rs
        spacing:    3


<EnemyReserveCards@ScrollView>:
    BoxLayout:
        orientation:    "horizontal"
        default_size: None, None
        default_size_hint: None, None
        size_hint_x: None
        #width: self.minimum_width
        #height: self.minimum_height
        spacing:    3








